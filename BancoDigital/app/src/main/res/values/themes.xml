<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BancoDigital" parent="Theme.MaterialComponents.DayNight.NoActionBar">
         <item name="android:windowBackground">@color/color_default</item>
         <item name="colorPrimaryDark">@color/color_default</item>
         <item name="colorPrimary">@color/color_default</item>
    </style>

    <style name="Theme.BancoDigital" parent="Base.Theme.BancoDigital" />

    <style name="Theme.EditText" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@drawable/bg_edit</item>
        <item name="android:padding">14dp</item>
        <item name="android:textColorHint">@color/color_text_hint</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_default</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SearchViewTheme">
        <item name="colorSecondary">@color/white</item>
        <item name="searchBackground">@drawable/bg_search</item>
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/search_hint</item>
        <item name="hintColor">@color/white</item>
        <item name="backIconTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconsTint">@color/white</item>
    </style>

    <style name="Theme.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorControlActivated">@color/white</item>
    </style>

</resources>